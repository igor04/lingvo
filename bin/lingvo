#!/usr/bin/env ruby

require 'lingvo'

module Lingvo
  module Console
    case ARGV[0]
    when '--parse' then Command.parse ARGV[1]
    when '--rand' then Command.rand ARGV[1]
    when '--size' then Command.size
    when '--notify'then  Command.notify
    when '--gui'then  Command.gui
    when '-h' then Command.help

    else
      Command.help
    end
  end
end
